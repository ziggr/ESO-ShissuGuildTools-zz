<GuiXml>
	<Controls>
    	<TopLevelControl movable="true" mouseEnabled="true" name="Shissu_Feedback" hidden="true">
	      	<Dimensions x="560" y="235" />
	      	<Anchor point="CENTER" offsetX="100" offsetY="100"/>

	      	<Controls>
	        	<Backdrop name="$(parent)_BG" inherits="ZO_DefaultBackdrop" />
	        	<Label name="$(parent)Title" height="25" width="95" inheritAlpha="true" color="D5B526" verticalAlignment="CENTER" horizontalAlignment="CENTER" text="Shissu's LUA Memory FEEDBACK">
	          		<Anchor point="TOP" relativeTo="$(parent)" relativePoint="TOP" offsetX="0" offsetY="5" />
	        	</Label>

	        	<Label name="$(parent)_Title" font="$(ANTIQUE_FONT)|25" wrapMode="ELLIPSIS" verticalAlignment="CENTER" text="Feedback">
					<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="5" offsetY="0" />
				</Label>

	        	<Button name="$(parent)_Close" inheritAlpha="true" verticalAlignment="CENTER" horizontalAlignment="CENTER">
	          		<Anchor point="CENTER" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-20" offsetY="15" />
	          		<Dimensions x="48" y="48" />
	          		<Textures normal="/esoui/art/hud/radialicon_cancel_up.dds" mouseOver="/esoui/art/hud/radialicon_cancel_over.dds" />
	          		<OnClicked>Shissu_Feedback:SetHidden(true)</OnClicked>
	        	</Button>

	 			<Label name="$(parent)_Note" font="ZoFontChat" wrapMode="ELLIPSIS" verticalAlignment="LEFT">
	          		<Anchor point="TOPLEFT" relativeTo="$(parent)" relativePoint="TOPLEFT" offsetX="10" offsetY="40" />
	          		<Dimensions x="550" y="220" />
	        	</Label>

	        	<Button name="$(parent)_Feedback" inherits="ZO_DefaultButton" text="Feedback">
	          		<Anchor point="BOTTOMLEFT" relativeTo="$(parent)" relativePoint="BOTTOMLEFT" offsetX="5" offsetY="-5" />
	          		<Dimensions x="120" />
	        	</Button>

	        	<Button name="$(parent)_500" inherits="ZO_DefaultButton" text="500 Gold">
	          		<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_Feedback" relativePoint="BOTTOMRIGHT" offsetX="5" offsetY="0" />
	          		<Dimensions x="100" />
	        	</Button>

	        	<Button name="$(parent)_1000" inherits="ZO_DefaultButton" text="1000 Gold">
	          		<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_500" relativePoint="BOTTOMRIGHT" offsetX="5" offsetY="0" />
	          		<Dimensions x="100" />
	        	</Button>

		        <Button name="$(parent)_5000" inherits="ZO_DefaultButton" text="5000 Gold">
		        	<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_1000" relativePoint="BOTTOMRIGHT" offsetX="5" offsetY="0" />
		          	<Dimensions x="100" />
		       	</Button>

		        <Button name="$(parent)_10000" inherits="ZO_DefaultButton" text="10000 Gold">
		        	<Anchor point="BOTTOMLEFT" relativeTo="$(parent)_5000" relativePoint="BOTTOMRIGHT" offsetX="5" offsetY="0" />
		          	<Dimensions x="100" />
		        </Button>
			</Controls>
    	</TopLevelControl>
	</Controls>
</GuiXml>
